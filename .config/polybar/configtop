[module/launcher]
type = custom/text
;content = "    "
;content = "  "
content = "  MENU  "

; "content" has the same properties as "format-NAME"
content-background = ${colors.background}
content-foreground = ${colors.fg3}
content-padding = 0
click-left = ~/.scripts/appsmenu.sh
click-right = ~/.scripts/powermenu-compact.sh

