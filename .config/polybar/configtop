[module/date]
type = internal/date
interval = 5
date = %%{F#fefefe}  %%{F-}%a %d %b
;time = 
;time-alt = 
label = %date%
format=<label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
;format-prefix-foreground = #738adb
#################################################################
###############################################################################
[module/time]
type = internal/date
interval = 5
time ="%%{F#af3a03}%%{T2}%%{T-}%%{F-}%I:%M %p"
label = %time%
format=<label>
format-foreground = ${colors.fg3}
format-background = ${colors.background}
;format-prefix =""
;format-prefix-foreground = ${colors.background-alt}

#################################################################
###############################################################################
[module/volume]
type = internal/pulseaudio
format-volume = %{T2}%{F#fefefe}<ramp-volume> <label-volume> <bar-volume>
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}
ramp-volume-foreground = ${colors.foreground}
format-volume-foreground =${colors.foreground}
format-volume-background =${colors.background}
format-muted = <label-muted>
format-muted-foreground = ${colors.foreground}
format-muted-background = ${colors.background}
label-muted=""
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
; Only applies if <bar-volume> is used
bar-volume-width = 6
bar-volume-gradient = false

bar-volume-indicator ="█"
bar-volume-indicator-foreground = ${colors.fg1}
bar-volume-indicator-font = 1

bar-volume-fill ="█"
bar-volume-foreground-0 = ${colors.fg1}
bar-volume-foreground-1 = ${colors.fg1}
bar-volume-foreground-2 = ${colors.fg1}
bar-volume-foreground-3 = ${colors.fg1}
bar-volume-foreground-4 = ${colors.fg1}
bar-volume-foreground-5 = ${colors.fg1}
bar-volume-foreground-6 = ${colors.fg1}
bar-volume-foreground-7 = ${colors.fg1}
bar-volume-foreground-8 = ${colors.fg1}
bar-volume-fill-font = 1

bar-volume-empty ="█"
bar-volume-empty-foreground = ${colors.fg3}
bar-volume-empty-font = 1

