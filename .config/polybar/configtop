[module/mpd]
type = internal/mpd
interval = 2

format-online =<icon-prev> <icon-stop> <toggle> <icon-next>
format-online-background = ${colors.background}
format-online-padding = 1

label-song =  "%artist% - %title%"
label-song-maxlen = 20
label-song-ellipsis = true

label-offline = "MPD is offline"

icon-play = 
icon-play-foreground =${colors.foreground-alt}
icon-pause = 
icon-pause-foreground =${colors.foreground}
icon-stop = 
icon-stop-foreground =${colors.foreground-alt}
icon-prev = 
icon-prev-foreground =${colors.foreground}
icon-next = 
icon-next-foreground =${colors.foreground}
