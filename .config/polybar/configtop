bar-used-width = 6
bar-used-gradient = false

bar-used-indicator =
bar-used-indicator-foreground = ${colors.fg1}
bar-used-indicator-font = 1

bar-used-fill = "█"
bar-used-foreground-0 = ${colors.fg1}
bar-used-background-0 = ${colors.background}
