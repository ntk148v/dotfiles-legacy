[bar/top]
monitor = ${env:MONITOR:}
monitor-fallback = ${env:MONITOR_FALLBACK:}
monitor-strict = false
override-redirect = false
width = 100%
height = 30
radius = 6.0
radius-top = 4
radius-bottom = 4
fixed-center = true
top = true
;separator = |

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = #f00

border-right-size = 30
border-left-size = 30
border-top-size = 20
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = false
wm-restack = i3

font-0 = M+ 1m:style=Regular:size=10;2
font-1 = DejaVuSans:size=10;2
font-2 = FontAwesome5Free:style=Solid:size=10;2
font-3 = FontAwesome5Free:style=Regular:size=10;2
font-4 = Material:size=9;2

modules-left = memory_bar cpu_bar
modules-center = i3
modules-right = volume time

;tray-detached = false
;tray-offset-x = 0
;tray-offset-y = 0
;tray-padding = 2
;tray-maxsize = 20
;tray-scale = 1.0
tray-position = right
tray-background = ${colors.background}

