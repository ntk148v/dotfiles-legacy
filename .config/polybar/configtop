[module/mpd_bar2]
type = internal/mpd
host = 127.0.0.1
port = 6600
interval = 1
format-online = <label-time>

; Available tokens:
;   %elapsed%
;   %total%
; Default: %elapsed% / %total%
label-time = " %total%"
label-time-foreground = ${colors.fg3}
label-time-background = ${colors.background}
label-offline = "mpd is offline"


