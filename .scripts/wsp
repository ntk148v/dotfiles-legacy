    "3")  echo -e "\u00b7 \u00b7 \u00b7 \uf111 \u00b7 \u00b7 \u00b7 \u00b7 \u00b7 \u00b7" ;;
    "4")  echo -e "\u00b7 \u00b7 \u00b7 \u00b7 \uf111 \u00b7 \u00b7 \u00b7 \u00b7 \u00b7" ;;
    "5")  echo -e "\u00b7 \u00b7 \u00b7 \u00b7 \u00b7 \uf111 \u00b7 \u00b7 \u00b7 \u00b7" ;;
